include /mixins/forms.pug

doctype html
html(lang="en")
  head
    title= Title
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href="/") Task Manager (snsin)
      button.navbar-toggler(type="button" data-toggle="collapse", data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      div.collapse.navbar-collapse(id="navbarSupportedContent")
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href=urlFor('listUsers')) Users
              span.sr-only (current)
        ul.navbar-nav
          if isSignedIn()
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")= userName
              div.dropdown-menu.dropdown-menu-right(aria-labelledby="navbarDropdown")
                a.dropdown-item(href=urlFor('userSettings')) Settings
                div.dropdown-divider
                a.dropdown-item(href=urlFor('logOut') data-method='delete') Log Out  
          //-
            li.nav-item
              div.dropdown
                //-
                  a.btn.btn-success(href=urlFor('logOut') data-method='delete' rel='nofollow') Log Out
                a.btn.btn-success.dropdown-toggle(href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Drop down
                  span.sr-only Toggle Dropdown
                div.dropdown-menu(aria-labelledby="dropdownMenuLink")
                  a.dropdown-item(href=urlFor('logOut') data-method='delete' rel='nofollow') Settings
                  div.dropdown-divider
                  a.dropdown-item(href=urlFor('logOut') data-method='delete' rel='nofollow') Delete account
              a.nav-link(href=urlFor('logOut') data-method='delete' rel='nofollow') Log Out
          else
            li.nav-item
              a.nav-link(href=urlFor('newSession')) Log In
            li.nav-item
              a.nav-link(href=urlFor('newUser')) Sign Up
    .container
      - const msg = flash.get()
      if msg
        .alert.alert-info.m-3= msg
    block content
    script(src='/assets/main.js')
